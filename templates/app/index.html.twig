{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <header>
        <h1>Todo PWA</h1>
        {% set _sc = 'add_task' %}
        <form {{ stimulus_controller(_sc) }}>
            <input type="text"
                   {{ stimulus_target(_sc, 'newTaskInput') }}
                   name="new-task-input"
                   id="new-task-input"
                   value="xxs"
                   placeholder="What do you have planned?" />
            <input type="submit" {{ stimulus_action(_sc, 'submit')}} id="new-task-submit" value="Add task" />
        </form>

    </header>
    <main>
        <section class="task-list">
            <h2>Tasks</h2>
            <div id="tasks" {{ stimulus_controller('task_list') }}>

            </div>
        </section>
    </main>
{% endblock %}
